import random

# list stuff
options = ["rock", "paper", "scissors"]

# make dictionary
rules = {"rock": "scissors", "scissors": "paper", "paper": "rock"}

# this will choose a random option from your list for the computer
computerOption = random.choice(options)

# start game
print("Welcome to the game of Rock, Paper, Scissors!")
print("Enter your choice (rock, paper or scissors): ")

# getting the user's choice
userHippo = input().lower()

# validate user's input
while userHippo not in options:
    print("You have to choose rock, paper or scissors.")
    userHippo = input().lower()

# show choices
print("You chose " + userHippo)
print("Computer chose " + computerOption)

# determine the winner
if userHippo == computerOption:
    print("Tie")
elif rules[userHippo] == computerOption:
    print("You win")
else:
    print("You lose.")

# end 
print("Come back again")

